@model IEnumerable<Medicine>
 @{
    ViewData["Title"] = "Category";
}

<link rel="stylesheet" type="text/css" href="~/css/cite1.css" />
 <div class="CHeader">
        <div class="CNT">
            <div class="Clogo">
                <img class="CimgLogo"  src="~/image/logo.png">
                <div class="CAptecaName">
