    </div>
    </div>
<div class=СContainer>
    <div class="Category">
        <div class="CatalogCategoryTitle"><h1>@ViewBag.Category</h1></div>
        
        <div class="CatalogMedicineList">
              @foreach (var medicine in Model)
        {
           <form class="CatalogCard">
            <button  >
               <img src=@medicine.Photo alt="фото"> 
